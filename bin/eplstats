#!/usr/bin/env ruby

require_relative '../config/environment'


class EplStats
  Scraper.new.make_players
  puts "Welcome to the EPL goal stats app"

  input = gets.strip
  case input
  when "all players"
    Player.display_players
  when "all teams"
    Team.display_teams
  when "liverpool"
    
  end
end

EplStats.new
